#
# Prelimiary image that updates java.security to disable weaker SSL algorithms
#
FROM cafapi/opensuse-base:1 AS builder

# Install OpenJDK 8 Runtime Environment and Patch
RUN zypper -n install java-1_8_0-openjdk patch

# Set Java Home
ENV JAVA_HOME=/usr/lib64/jvm/java-1.8.0-openjdk-1.8.0

# Disable weaker security algorythms
COPY disableWeakTlsAlgorithms.patch $JAVA_HOME/jre/lib/security/
RUN cd $JAVA_HOME/jre/lib/security && \
    patch -i disableWeakTlsAlgorithms.patch java.security

#
# The acutal image definition
#
FROM cafapi/opensuse-base:1

# Update the OS packages and install Java
RUN zypper -n refresh

# Install Java certificate installation script
ADD https://raw.githubusercontent.com/CAFapi/caf-common/v1.14.0/container-cert-script/install-ca-cert-java.sh \
    /startup/startup.d/
RUN chmod +x /startup/startup.d/install-ca-cert-java.sh
   
# Install OpenJDK 8 Runtime Environment and Patch
RUN zypper -n install java-1_8_0-openjdk

# Set Java Home
ENV JAVA_HOME=/usr/lib64/jvm/java-1.8.0-openjdk-1.8.0

# Disable weaker security algorythms
COPY --from=builder $JAVA_HOME/jre/lib/security/java.security $JAVA_HOME/jre/lib/security/java.security

# Tag the image
ARG BUILD_NUMBER
ARG BUILD_DATE
ARG GIT_REPO
ARG GIT_BRANCH
ARG GIT_COMMIT

LABEL Build.Number="$BUILD_NUMBER" \
      Build.Date="$BUILD_DATE" \
      Git.Repo="$GIT_REPO" \
      Git.Branch="$GIT_BRANCH" \
      Git.Commit="$GIT_COMMIT"
